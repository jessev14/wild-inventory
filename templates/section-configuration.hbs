<form autocomplete="off">
    <div class="form-group">
        <label>Rename Section</label>
        <input type="text" name="labelOverride" value="{{labelOverride}}" />
        <p class="notes">Leave blank to use original section name.</p>
    </div>
    <div class="form-group">
        <label>Maximum Weight</label>
        <input type="number" name="maxWeight" value="{{maxWeight}}" />
        <p class="notes">Leave blank for no maximum weight.</p>
    </div>
    <div class="form-group">
        <label>Exclude from Weight Limit</label>
        <input type="checkbox" name="weightLimit" {{checked weightLimit}} />
    </div>
    <button type="submit"><i class="fas fa-save"></i>Save Section Configuration</button>
</form>